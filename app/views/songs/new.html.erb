<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
  </div>

  <div>
    <%= f.label :genre_name %>
    <%= f.text_field :genre_id, list: "genres_autocomplete" %>
      <datalist id="genres_autocomplete">
        <% Genre.all.each do |genre| %>
          <option value="<%= genre.name %>">
        <% end %>
      </datalist>
    <br />
  </div>

  <br>
    <%= f.label :content %><br>
    <input name="song[note_contents][]" id="song_notes_1" ><br>
    <input name="song[note_contents][]" id="song_notes_2" ><br>
  <br/>

 
  
  <%= f.submit %>
<% end %>


